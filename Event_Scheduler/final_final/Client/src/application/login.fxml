<AnchorPane fx:id="window" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">
    <children>
        <PasswordField fx:id="txtpassword" focusTraversable="false" layoutX="157.0" layoutY="264.0" promptText="Password" />
        <TextField fx:id="txtusername" focusTraversable="false" layoutX="157.0" layoutY="207.0" promptText="Username" />
        <Button fx:id="loginbtn" layoutX="157.0" layoutY="351.0" mnemonicParsing="false" onAction="#loginPressed" text="Login" />
        <CheckBox layoutX="157.0" layoutY="311.0" mnemonicParsing="false" text="Remember me" />
        <Hyperlink layoutX="397.0" layoutY="453.0" text="Contact us" />
        <Label layoutX="137.0" layoutY="99.0" text="Event Scheduler">
            <font>
                <Font name="Berlin Sans FB" size="34.0" />
            </font>
        </Label>
        <Label layoutX="22.0" layoutY="457.0" text="Developed by: Bit**please" />
        <Label fx:id="invalid" layoutX="189.0" layoutY="404.0" text="Invalid Credentials" textFill="#e31414cb" visible="false" />
        <Button fx:id="regbtn" layoutX="279.0" layoutY="354.0" mnemonicParsing="false" onAction="#registerPressed" text="Register" />
    </children>
</AnchorPane>
